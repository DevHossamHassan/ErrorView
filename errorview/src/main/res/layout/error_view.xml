<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" >


<ImageView
        android:id="@+id/imgErrorIcon"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_error_default_icon"/>

    <TextView
        android:textSize="24sp"
        android:id="@+id/tvErrorText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgErrorIcon"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:text="@string/error_default_text1"/>

    <TextView
        android:textSize="18sp"
        android:id="@+id/tvErrorText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvErrorText1"
        android:layout_centerHorizontal="true"
        android:text="@string/error_default_text2"/>
</merge>